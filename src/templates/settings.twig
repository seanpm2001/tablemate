{# @var craft \craft\web\twig\variables\CraftVariable #}

{% import "_includes/forms" as forms %}

{{ forms.checkboxSelectField({
    label: 'Allowed column types'|t('tablemates'),
    instructions: 'Select which field type(s) authors should be able to select from when creating table columns.'|t('tablemates'),
    name: 'allowedTypeOptions',
    showAllOption: true,
    values: field.allowedTypeOptions,
    options: field.getTypeOptions()
}) }}

<hr/>

<fieldset>

    {{ forms.textField({
        label: 'Columns Label'|t('tablemate'),
        id: 'columnsLabel',
        name: 'columnsLabel',
        value: field.columnsLabel,
    }) }}

    {{ forms.textareaField({
        label: 'Columns Instructions'|t('tablemate'),
        id: 'columnsInstructions',
        name: 'columnsInstructions',
        value: field.columnsInstructions,
    }) }}

    {{ forms.textField({
        label: 'Add column label'|t('tablemate'),
        id: 'columnsAddRowLabel',
        name: 'columnsAddRowLabel',
        value: field.columnsAddRowLabel,
    }) }}

</fieldset>

<hr/>

<fieldset>

    {{ forms.textField({
        label: 'Rows Label'|t('tablemate'),
        id: 'rowsLabel',
        name: 'rowsLabel',
        value: field.rowsLabel,
    }) }}

    {{ forms.textareaField({
        label: 'Rows Instructions'|t('tablemate'),
        id: 'rowsInstructions',
        name: 'rowsInstructions',
        value: field.rowsInstructions,
    }) }}

    {{ forms.textField({
        label: 'Add row label'|t('tablemate'),
        id: 'rowsAddRowLabel',
        name: 'rowsAddRowLabel',
        value: field.rowsAddRowLabel,
    }) }}

</fieldset>
